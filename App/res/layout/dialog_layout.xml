<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout1"
                android:layout_width="300dp"
                android:layout_height="240dp">

    <TextView
            android:id="@+id/logView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:text="Extract to:"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:id="@+id/extract_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp" android:layout_alignBottom="@+id/View1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnBrowseDir"
            android:layout_toStartOf="@+id/btnBrowseDir" android:maxLines="1">

        <requestFocus/>
    </EditText>

    <LinearLayout
            android:id="@+id/LinearLayout1"
            style="?android:attr/buttonBarStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:measureWithLargestChild="true"
            android:orientation="horizontal"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:paddingTop="0dip">

        <Button
                android:id="@+id/btnCancel"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@android:string/cancel"/>

        <Button
                android:id="@+id/btnExtract"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Extract"/>
    </LinearLayout>

    <View
            android:id="@+id/View1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_above="@+id/LinearLayout1"
            android:layout_alignParentLeft="true"
            android:background="?android:attr/dividerHorizontal"/>
    <Button
            android:id="@+id/btnBrowseDir"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Browse"
            android:layout_alignTop="@+id/extract_to"
            android:layout_alignLeft="@+id/btnBrowseFile"
            android:layout_alignStart="@+id/btnBrowseFile"/>
    <TextView android:id="@+id/textView" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:ems="10"
              android:padding="10dp"
              android:text="File to extract:"
              android:layout_alignParentTop="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>
    <EditText android:id="@+id/extract_file" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:ems="10"
              android:padding="10dp"
              android:layout_below="@+id/textView"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_toLeftOf="@+id/btnBrowseDir"
              android:layout_toStartOf="@+id/btnBrowseDir"
              android:maxLines="1"/>
    <Button style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnBrowseFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Browse"
            android:layout_above="@+id/logView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>